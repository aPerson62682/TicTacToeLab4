<Window x:Class="TickTacToeLab.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickTacToeLab"
        mc:Ignorable="d"
        Title="Startup" Height="450" Width="800">
    <Grid>
    <Grid Background="DeepSkyBlue" > 
        <Label Content="Choose X or O to continue. (X usually plays first)" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" Height="57" Width="468" FontSize="20" Background="White" BorderBrush="Black" BorderThickness="5"/>
        <Image HorizontalAlignment="Left" Height="126" Source="Images\tic-tac-toe_x.png" Margin="206,189,0,0" VerticalAlignment="Top" Width="132" MouseDown="Image_MouseDown"/>
        <Image HorizontalAlignment="Left" Height="131" Source="Images\tic-tac-toe_o.png" Margin="462,189,0,0" VerticalAlignment="Top" Width="126" RenderTransformOrigin="1.23,0.528" MouseDown="Image_MouseDown_1"/>

    </Grid>
    </Grid>
    
</Window>
